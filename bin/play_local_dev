#!/bin/bash -ex

main()
{
    pushd $(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd) >/dev/null

    cd ..

    ./requirements/install.sh

    ansible-playbook  -i hosts/local_dev.ini  -e "@vars/vars.yml"  -e "@secret_vars/dev.yml"  -e "host=local_dev"  --ask-become-pass  $@

	popd >/dev/null
}

main "$@"
